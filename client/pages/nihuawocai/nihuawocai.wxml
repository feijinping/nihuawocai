<!--pages/nihuawocai.wxml-->
<view>
    <view>时间：{{time}}</view>
    <scroll-view wx:for="{{friendlist}}">
      <view>
        <view>
          <image src='{{item.avatarUrl}}'></image>
        </view>
        <view>
         <text>{{item.nickName}}</text>
        </view>
      </view>
     
    </scroll-view>
</view>
<view style='width:100%;height:500rpx;'>
  <canvas canvas-id="draw_area"
    class='draw_area'
    disable-scroll="false"
    bindtouchstart="touchStart"
    bindtouchmove="touchMove"
    bindtouchend="touchEnd"
    bindtouchcancel="touchEnd"
   ></canvas>
</view>
<button bind:tap="clearContext" type='primary' size='mini'>清空</button>
<view style='width:100%;height:500rpx;'>
<canvas canvas-id="secondCanvas" class='secondCanvas' style='background-color: #C0C0C0;'>
</canvas>
</view>

